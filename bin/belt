#!/usr/bin/env ruby

require "rubygems"
require "bundler/setup"
require 'optparse'
require 'methadone'
require 'belt'

class App
  include Methadone::Main
  include Methadone::CLILogging

  include Belt::CLI::UI


  main do |domain_name, ip_address| 
    

    display :welcome_banner, [ :bold, :yellow ]

    
    
    puts "Pointing " + domain_name.blue + " to " + ip_address.red + " ..."

    server_tools.set_ipaddress_for_a_record_for(domain_name, ip_address)

  end

  version     '0.0.1alpha'
  description 'Holy Utility Belt Batman!'
  arg         :domain_name, :required
  arg         :ip_address, :required

  options['ip-address'] = '127.0.0.1'
  on("-i IP_ADDRESS","--ip-address","IP Address",/^\d+\.\d+\.\d+\.\d+$/)
  # supplemental methods here

  # Declare command-line interface here

  # description "one line description of your app"
  #
  # Accept flags via:
  # on("--flag VAL","Some flag")
  # options[flag] will contain VAL
  #
  # Specify switches via:
  # on("--[no-]switch","Some switch")
  #
  # Or, just call OptionParser methods on opts
  #
  # Require an argument
  # arg :some_arg 
  #
  # # Make an argument optional
  # arg :optional_arg, :optional

  version Belt::VERSION

  use_log_level_option

  go!
end
